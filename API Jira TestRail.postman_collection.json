		{
			"name": "Find testcases",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"var arr = [];\r",
							"\r",
							"function cases() {\r",
							"    jsonData.cases.forEach(item =>\r",
							"    {\r",
							"        if (item.type_id == \"9\") \r",
							"        {\r",
							"            console.log(\"ID: \" + item.id);\r",
							"            arr.push(item.id);\r",
							"        }\r",
							"    })\r",
							"}\r",
							"\r",
							"cases();\r",
							"\r",
							"pm.collectionVariables.set(\"casesIds\", JSON.stringify(arr));\r",
							"console.log(\"array: \" + arr);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{TR_pass}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{TR_user}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{TR_url}}/index.php?/api/v2/get_cases/{{projectID}}&suite_id={{suite_id}}",
					"host": [
						"{{TR_url}}"
					],
					"path": [
						"index.php"
					],
					"query": [
						{
							"key": "/api/v2/get_cases/{{projectID}}",
							"value": null
						},
						{
							"key": "suite_id",
							"value": "{{suite_id}}"
						}
					]
				}
			},
			"response": []
