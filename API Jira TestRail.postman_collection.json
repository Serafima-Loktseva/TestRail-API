	"item": [
		{
			"name": "Create New task Jira",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.collectionVariables.set(\"Refs\", jsonData.key);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{jira_pass}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{jira_user}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"fields\": {\r\n       \"project\":\r\n       {\r\n          \"key\": \"{{project_key}}\"\r\n       },\r\n       \"summary\": \"{{new_TR_name}}: run full regression testing\",\r\n       \"description\": \"please see the report here:\",\r\n       \"issuetype\": {\r\n          \"name\": \"Task\"          \r\n       },\r\n        \"priority\": {\r\n            \"id\": \"4\"\r\n        },\r\n       \"Story Points\": 4,\r\n        \"Team\": \"architecture\",\r\n        \"Acceptance Criteria\": \"regression test is done, no critical issues are found\" \r\n       \r\n   }\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{jira_url}}/rest/api/2/issue/",
					"host": [
						"{{jira_url}}"
					],
					"path": [
						"rest",
						"api",
						"2",
						"issue",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Find runID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"\r",
							"var name = pm.collectionVariables.get(\"Test_Run_name\");\r",
							"\r",
							"jsonData.runs.forEach(item =>\r",
							"{\r",
							"    if (item.name == name) \r",
							"    {\r",
							"        console.log(\"ID: \" + item.id);        \r",
							"        pm.collectionVariables.set(\"RunID\", item.id)\r",
							"    }\r",
							"})\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{TR_pass}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{TR_user}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{TR_url}}/index.php?/api/v2/get_runs/{{projectID}}",
